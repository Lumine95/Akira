<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6"
    tools:context="com.zmm.akira.MainActivity">

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f6"
        android:horizontalSpacing="@dimen/margin_size_5"
        android:numColumns="3"
        android:padding="@dimen/margin_size_5"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/margin_size_5"
        tools:listitem="@layout/item_menu" />

    <Button
        android:id="@+id/btn_dao"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_size_50"
        android:background="@color/colorPrimary"
        android:text="GreenDao"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
